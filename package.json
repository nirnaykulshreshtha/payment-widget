{
  "name": "@matching-platform/payment-widget",
  "version": "0.1.0",
  "description": "Cross-chain payment widget for matching platform - Accept any input asset and deliver fixed target amount",
  "type": "module",
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "SETUP.md",
    "extract-to-separate-repo.sh"
  ],
  "keywords": [
    "payment-widget",
    "cross-chain",
    "react",
    "blockchain",
    "bridge",
    "swap"
  ],
  "author": "Matching Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.bucle.dev/atlanzyphora/frontend.git",
    "directory": "ui/packages/payment-widget"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.10.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "chai": "^4.5.0",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "tsc && cp src/styles.css dist/styles.css",
    "type-check": "tsc --noEmit",
    "prepack": "npm run build",
    "compile-contracts": "hardhat compile",
    "test-contracts": "hardhat test",
    "deploy-call-forwarder": "hardhat run scripts/deployCallForwarder.ts"
  },
  "dependencies": {
    "@across-protocol/app-sdk": "^0.4.2",
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.456.0",
    "sonner": "^1.4.2",
    "tailwind-merge": "^2.6.0",
    "viem": "^2.38.0",
    "dotenv": "^16.4.5"
  }
}
